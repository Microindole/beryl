// Option methods test

enum Option<T> {
    Some(T),
    None
}

int main() {
    var some_val = Option::<int>.Some(42);
    var none_val = Option::<int>.None;

    // Test is_some / is_none
    if !some_val.is_some() { return 1; }
    if some_val.is_none() { return 2; }
    
    if none_val.is_some() { return 3; }
    if !none_val.is_none() { return 4; }

    // Test unwrap
    if some_val.unwrap() != 42 { return 5; }

    // Test unwrap_or
    if none_val.unwrap_or(100) != 100 { return 6; }
    if some_val.unwrap_or(100) != 42 { return 7; }

    // Test nested types
    var nested = Option::< Option<int> >.Some(Option::<int>.Some(10));
    if nested.unwrap().unwrap() != 10 { return 8; }

    // Print success
    print("All Option tests passed!\n");
    return 0;
}
